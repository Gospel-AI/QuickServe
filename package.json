{
  "name": "quickserve",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api-public": "pnpm --filter @quickserve/api-public dev",
    "dev:api-admin": "pnpm --filter @quickserve/api-admin dev",
    "dev:mobile": "pnpm --filter @quickserve/mobile dev",
    "dev:mobile:tunnel": "pnpm --filter @quickserve/mobile dev:tunnel",
    "dev:web-viewer": "pnpm --filter @quickserve/web-viewer dev",
    "dev:web-admin": "pnpm --filter @quickserve/web-admin dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @quickserve/api-public db:generate",
    "db:push": "pnpm --filter @quickserve/api-public db:push",
    "db:migrate": "pnpm --filter @quickserve/api-public db:migrate",
    "db:studio": "pnpm --filter @quickserve/api-public db:studio"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
